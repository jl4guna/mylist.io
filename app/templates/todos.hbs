<ul class="collection with-header">
    <li class="collection-header">
        <h4>ToDos</h4>
    </li>

    {{#each model as |todo|}}
        <li class="collection-item row {{if todo.isEditing "large"}} {{if todo.isCompleted "completed"}} {{if todo.hasDirtyAttributes "unsaved"}}">
            <div class="col s1">
                {{epic-checkbox value=todo.isCompleted}}
            </div>
            <div class="col s7">
                {{inliner- value=todo.title isEditing=todo.isEditing isCompleted=todo.isCompleted}}
            </div>
            <div class="col s4">
                {{controls- todo=todo save=saveItem delete=deleteItem restore=restoreItem}}
            </div>
        </li>
    {{/each}}
</ul>

<button class="fa fa-floppy-o waves-effect waves-light btn {{if areDirtyItems "disabled"}}" {{action "saveAll"}} {{bind-attr disabled="areDirtyItems"}}>
    Save All
</button>

<button class="fa fa-undo waves-effect waves-light btn {{if areDirtyItems "disabled"}}" {{action "restoreAll"}} {{bind-attr disabled="areDirtyItems"}}>
    Restore All
</button>

<div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
    <a class="btn-floating btn-large waves-effect waves-light red" {{action "add"}}><i class="fa fa-plus"></i></a>
</div>
